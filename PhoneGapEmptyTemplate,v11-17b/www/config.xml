    <!-- =================================================================== -->
    <!-- icons and splash screen definitions                                 -->
    <!--    leave alone unless you know what you are doing                   -->
    <!-- =================================================================== -->

    <platform name="android">
        <!--
            ldpi    :  36 x  36 px
            mdpi    :  48 x  48 px
            hdpi    :  72 x  72 px
            xhdpi   :  96 x  96 px
            xxhdpi  : 144 x 144 px
            xxxhdpi : 192 x 192 px
        -->
