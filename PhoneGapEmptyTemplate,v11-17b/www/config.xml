<widget 
    id          = "edu.asu.cis430.SEMESTER-YEAR.ASURITE.APPNAME"  
    version     = "1.0.0" 
    xmlns       = "http://www.w3.org/ns/widgets" 
    xmlns:gap   = "http://phonegap.com/ns/1.0">

    <!-- =================================================================== -->
    <!-- Change 'name', 'description', and 'author' tags below               -->
    <!-- =================================================================== -->

    <name>APPNAME</name>

    <description>
        Nice description goes here, specify good comments, its uses, 
        and purpose
    </description>

    <author email="asurite@asu.edu" href="http://www.asu.edu">
        Your Name
    </author>

    <content src="index.html" />  <!-- the starting point of your hybrid app -->

    <!-- =================================================================== -->
    <!-- Plugins are libraries that extend the base functionality of the     -->
    <!-- HTML/CSS/JS model to include device specific features of mobile     -->
    <!-- see https://build.phonegap.com/plugins                              -->
    <!--                                                                     -->
    <!-- add any additional plugins below                                    -->
    <!-- =================================================================== -->
    <plugin name="cordova-plugin-battery-status"                spec="1.1.1" />
    <plugin name="cordova-plugin-camera"                        spec="2.1.1" />
    <plugin name="cordova-plugin-media-capture"                 spec="1.2.0" />
    <plugin name="cordova-plugin-console"                       spec="1.0.2" />
    <plugin name="cordova-plugin-contacts"                      spec="2.0.1" />
    <plugin name="cordova-plugin-device"                        spec="1.1.1" />
    <plugin name="cordova-plugin-device-motion"                 spec="2.0.0" />
    <plugin name="cordova-plugin-dialogs"                       spec="1.2.0" />
    <plugin name="cordova-plugin-file"                          spec="4.1.1" />
    <plugin name="cordova-plugin-file-transfer"                 spec="1.5.0" />
    <plugin name="cordova-plugin-geolocation"                   spec="2.1.0" />
    <plugin name="cordova-plugin-globalization"                 spec="1.0.3" />
    <plugin name="cordova-plugin-inappbrowser"                  spec="1.3.0" />
    <plugin name="cordova-plugin-media"                         spec="2.2.0" />
    <plugin name="cordova-plugin-network-information"           spec="1.2.0" />
    <plugin name="cordova-plugin-splashscreen"                  spec="3.2.1" />
    <plugin name="cordova-plugin-statusbar"                     spec="2.3.0" />
    <plugin name="cordova-plugin-vibration"                     spec="2.1.0" />
    <plugin name="cordova-plugin-whitelist"                     spec="1.2.2" />

    <!-- =================================================================== -->
    <!-- Preferences: configure defaults for your hybrid app                 -->
    <!--                                                                     -->
    <!-- for example:                                                        -->
    <!-- Orientation: values: landscape, portrait, or default (allow both)   -->
    <!-- DisallowOverscroll: have the webview not "bounce" when touched      -->
    <!-- android-minSdkVersion:  set minimum threshhold of OS versions       -->
    <!--   14 = Android 4.0.1 (Ice Cream Sandwich)                           -->
    <!--   for more see https://source.android.com/source/build-numbers.html -->
    <!-- more preferences are available at                                   -->
    <!-- at http://cordova.apache.org/docs/en/latest/config_ref/             -->
    <!-- =================================================================== -->
    <preference name = "Orientation"           value = "default"   />
    <preference name = "DisallowOverscroll"    value = "true"      />
    <preference name = "android-minSdkVersion" value = "14"        />
    <preference name = "phonegap-version"      value = "cli-6.5.0" />
    
